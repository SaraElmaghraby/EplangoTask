@model IEnumerable<EplangoTask.Models.Employee>

@{
    ViewBag.Title = "DepartmentDetails";
}

<h2>DepartmentDetails</h2>
@*<a href="~/CrystalReports/ReportDepartmentDetails.aspx/">View PDF</a>*@

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Department.DeptName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DeptName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
        @*<buttonlink class="btn-dark" onclick="">

            @Html.ActionLink("Department Details", "~/CrystalReports/ReportDepartmentDetails", new { id = @Html.DisplayFor(modelItem => item.DepartmentId) })
        </buttonlink>*@

        
    }

</table>
<div class="row">
    <div class="col-md-4">
        <a href="@Url.Action("ExportDepartmentDetails")"> Download PDF </a>
    </div>
